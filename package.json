{
  "name": "devconnecto",
  "version": "1.0.0",
  "description": "Social Network for developers",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"kill-port 5000 && kill-port 3000 && npm run server\" \"wait-on http://localhost:5000 && npm run client\"",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "postinstall": "npm install --legacy-peer-deps",
    "client:start": "NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Hritambhar",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "buffer": "^6.0.3",
    "config": "^3.3.11",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "gravatar": "^1.8.2",
    "https-browserify": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "request": "^2.88.2",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.3",
    "url-normalize": "^2.0.0",
    "util": "^0.12.5",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "detect-port": "^1.6.1",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.4",
    "react-app-rewired": "^2.2.1",
    "wait-on": "^7.2.0",
    "webpack-cli": "^5.1.4"
  }
}
